{
  "name": "arecofix",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "dev": "rm -rf .angular && ng serve",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "build:dev": "ng build --configuration development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "jserver": "json-server --watch ./src/app/data/data.json --port 3000",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:complete": "npm run build && firebase deploy --only hosting && ng build --configuration production --base-href /Arecofixpage/ && npx angular-cli-ghpages --dir=dist/arecofix/browser",
    "deploy:auto": "npm run build && firebase deploy --only hosting && git add . && git commit -m \"Auto-deploy: Update site and Firebase\" && git push"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "overrides": {
    "gh-pages": "^6.3.0"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@capacitor/android": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@ionic/angular": "8.7.17",
    "@supabase/supabase-js": "^2.90.1",
    "@tailwindcss/postcss": "^4.1.18",
    "angularx-qrcode": "^21.0.4",
    "cally": "^0.9.0",
    "chart.js": "^4.5.1",
    "firebase": "^12.8.0",
    "jspdf": "^4.0.0",
    "ng2-charts": "^8.0.0",
    "ngx-mask": "^20.0.3",
    "ngx-skeleton-loader": "^11.3.0",
    "postcss": "^8.5.6",
    "posthog-js": "^1.326.0",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@capacitor/cli": "^8.0.0",
    "@types/jasmine": "~5.1.15",
    "@types/pg": "^8.16.0",
    "angular-cli-ghpages": "^3.0.2",
    "daisyui": "^5.5.14",
    "jasmine-core": "~5.13.0",
    "json-server": "^1.0.0-beta.3",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "pg": "^8.17.1",
    "postcss": "^8.5.6",
    "typescript": "~5.9.3"
  }
}
